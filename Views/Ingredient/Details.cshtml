@model Ingredient
@{
	ViewBag.Title = "Ingredient Details";
}

<h1>@Model.Name Details</h1>
<hr />
@if (Model.ProductIngredients != null && Model.ProductIngredients.Any())
{
	<h3>Products using this ingredient</h3>
	<table class="table">
		<thead>
			<tr>
				<th>Product Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var productIngredient in Model.ProductIngredients)
			{
				<tr>
					<td>@productIngredient.Product.Name</td>
					<td>@productIngredient.Product.Description</td>
					<td>@productIngredient.Product.Price</td>
					<td>
						<a asp-action="Details" asp-controller="Product" asp-route-id="@productIngredient.ProductId">Details</a> |
						<a asp-action="Edit" asp-controller="Product" asp-route-id="@productIngredient.ProductId">Edit</a> |
						<a asp-action="Delete" asp-controller="Product" asp-route-id="@productIngredient.ProductId">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>No products are using this ingredient.</p>
}
<div>
	<a asp-action="Index">Back to List</a>
</div>
